<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" xmlns:tools="http://schemas.android.com/tools"
              tools:context=".MainActivity">
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent">
        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reply to last"
                android:id="@+id/buttonReply"
                android:layout_below="@+id/buttonRandomNotif"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="38dp" />
        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post Random Notification"
                android:id="@+id/buttonRandomNotif"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="38dp" android:layout_margin="5dp"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="366dp"
                android:layout_height="238dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/buttonReply"
                android:layout_alignParentStart="true" android:layout_gravity="bottom"/>
    </RelativeLayout>

</LinearLayout>
